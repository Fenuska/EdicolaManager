<Window x:Class="EdicolaManager.PeriodicoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PeriodicWindow" Height="332.8" Width="622.4" Closing="Window_Closing">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,19.6,23.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.18"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Button Content="Continua" HorizontalAlignment="Left" Margin="511,251,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Nome periodico" HorizontalAlignment="Left" Margin="18,31,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbPeriodico" HorizontalAlignment="Left" Margin="119,34,0,0" VerticalAlignment="Top" Width="442" IsEditable="True"
                  DisplayMemberPath="Nome" SelectedValuePath="IdPeriodico" IsDropDownOpen="True" />
    </Grid>
</Window>
